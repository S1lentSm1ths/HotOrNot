<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_layout_background"
    tools:context=".RegistrationScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/createAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/create_account"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appLogo" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawableStart="@drawable/ic_login_form"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:paddingHorizontal="100dp"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="@id/createAccountTextView"
            app:layout_constraintStart_toStartOf="@id/createAccountTextView"
            app:layout_constraintTop_toBottomOf="@+id/createAccountTextView" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_login_form"
            android:gravity="start"
            android:hint="@string/last_name"
            android:inputType="textPersonName"
            android:paddingHorizontal="100dp"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="@id/createAccountTextView"
            app:layout_constraintStart_toStartOf="@id/createAccountTextView"
            app:layout_constraintTop_toBottomOf="@+id/firstNameEditText" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/card_view_background"
            android:hint="@string/create_account"
            android:textColorHint="@color/black"
            app:cornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@+id/lastNameEditText"
            app:layout_constraintStart_toStartOf="@id/lastNameEditText"
            app:layout_constraintEnd_toEndOf="@id/lastNameEditText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>